<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ProfileDetails"
    tools:showIn="@layout/activity_profile_details">

    <LinearLayout
        android:layout_width="306dp"
        android:layout_height="141dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="114dp"
            android:layout_height="133dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_grandmother" />

        <TextView
            android:id="@+id/nameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:text="Meredith Lim"
            android:textSize="25dp"
            android:textStyle="bold" />

    </LinearLayout>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age: 68 years old\n\nGender: Female \n\nBirthdate: 12/04/1950 \n\nAddress: Blk 192 Ang Mo Kio St 13 S(483192)"
        android:textSize="25dp" />


</LinearLayout>