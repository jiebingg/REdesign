<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notiflist"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/notiflist_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/notiflist_button1"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="13dp"
        android:layout_marginLeft="13dp" />


    <Button
        android:id="@+id/notiflist_button1"
        android:layout_width="79dp"
        android:layout_height="36dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="4dp"
        android:layout_toStartOf="@+id/notiflist_button2"
        android:drawableLeft="@drawable/ic_taken"
        android:text="taken"
        android:textSize="8dp" />

    <Button
        android:id="@+id/notiflist_button2"
        android:layout_width="77dp"
        android:layout_height="36dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="86dp"
        android:layout_marginRight="86dp"
        android:drawableLeft="@drawable/ic_skip"
        android:text="skip"
        android:textSize="8dp" />

    <Button
        android:id="@+id/notiflist_button3"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="0dp"
        android:drawableLeft="@drawable/ic_snooze"
        android:text="snooze"
        android:textSize="8dp" />

</RelativeLayout>
